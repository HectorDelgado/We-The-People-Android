<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/AmiriTextViewStyle</item>
        <item name="buttonStyle">@style/AmiriButtonStyle</item>
    </style>

    <style name="AmiriTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/asar</item>
    </style>
    <style name="AmiriButtonStyle" parent="android:Widget.Button">
        <item name="fontFamily">@font/asar</item>
    </style>

</resources>
